@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Web_NoiThat.Models.Product

<div class="Detail-Header">
    <div class="container">
        <div class="px-4 px-lg-0 pt-5 mb-5">
            <div class="container text-white py-5 text-center" "></div>
        </div>
        <div class="row">
        </div>
        <div class="row mb-5 product-detail-card p-4 rounded">
            <div class="col-md-6" style="border-right: 1px solid #e5dfdf;">
                <img class="detail-img"
                     src="/@Model.product_img" />
                <div class="row">
                    <div class="col-md-2 mb-2">
                        <img class="img-thumbnail" src="https://placehold.it/250x200" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <img class="img-thumbnail" src="https://placehold.it/250x200" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <img class="img-thumbnail" src="https://placehold.it/250x200" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <img class="img-thumbnail" src="https://placehold.it/250x200" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <img class="img-thumbnail" src="https://placehold.it/250x200" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <img class="img-thumbnail" src="https://placehold.it/250x200" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h3 style="text-transform:uppercase">@Model.product_name</h3>
                <p>
                    @Model.description
                </p>
                <div class="row">
                    <div class="col-md-3">
                        <label for="middle-label"
                               class="text-center"
                               style="font-size: 20px;">Quantity:</label>
                    </div>

                    <div class="col-md-6 ">
                        <div class="input-group input-number-group">
                            <div class="input-group-button">
                                <span class="input-number-decrement">-</span>
                            </div>
                            <input class="input-number" id="quanti" name="quanti" type="number" value="1" min="1">
                            <div class="input-group-button">
                                <span class="input-number-increment">+</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h1 style="color:red">$@Model.price</h1>
                        <hr />
                    </div>

                    <div class="col-md-12 mb-2 text-right">
                        <button class="buy--btn" onclick="return window.location='@Url.Action("Add_Cart","Cart",new { @id=Model.product_id})'"><i class="fa fa-shopping-cart"></i> ADD TO CART</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Some Product -->
        <div class="row">
            <div class="col-md-12 mb-5">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="footing mb-4 ">Some Product</h3>
                    </div>
                </div>
                @* Product *@
                <div class="row">
                    <div class="MultiCarousel" data-items="1,3,5,6" data-slide="1" id="MultiCarousel" data-interval="1000">
                        <div class="MultiCarousel-inner">
                            @{
                                Html.RenderPartial("~/Views/Detail/Load_Product.cshtml");
                            }
                        </div>
                        <button class="left fa fa-chevron-left btn btn-secondary leftLst"></button>
                        <button class="right fa fa-chevron-right btn btn-secondary rightLst"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Carousel")

<script>
    $('.input-number-increment').click(function () {
        var $input = $(this).parents('.input-number-group').find('.input-number');
        var val = parseInt($input.val(), 10);
        $input.val(val + 1);
        //alert($(this).parents().find('.product-line-price').val())
        updateQuantity(this, 0);
    });

    $('.input-number-decrement').click(function () {
        var $input = $(this).parents('.input-number-group').find('.input-number');
        var val = parseInt($input.val(), 10);
        $input.val(val - 1);
        //alert($(this).parents('.input-number-group').find('.input-number').val());
        updateQuantity(this, 1);
    })
</script>
