
<div class="container">
    <nav class="top_nav d-flex pt-4">
        <h1>
            <a class="navbar-brand" href="~/Home/Index">
                2Furtunirture
            </a>
        </h1>

        <!--Logo Site-->
        <div class="w3ls_right_nav ml-auto d-flex">
            <!-- search form -->
            <form class="nav-search form-inline my-0 form-control border-0" action="#" method="post">
                <input class="form-control" type="search" placeholder="Search" aria-label="Search" style="border-radius:0px;">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="border-radius:0px;">Search</button>
            </form>
            <!-- search form -->
            <div class="nav-icon d-flex dropdown">
                <!-- sigin and sign up -->
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="btn-login-custom align-self-center mx-md-4" id="menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <p>Hello, @ViewBag.User</p>
                    </button>
                    <div class="dropdown-menu" style="color:black;" aria-labelledby="menu">
                        @Html.ActionLink("Trang Cá Nhân", "#", "Home", new { @class = "dropdown-item" })
                        @Html.ActionLink("Giỏ hàng", "#", "Home", new { @class = "dropdown-item" })
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Index","Admin")" class="dropdown-item">Trang quanr tri</a>
                        }
                        <a class="dropdown-item text-danger" href="@Url.Action("Logout","Home")">Logout</a>
                    </div>
                }
                else
                {
                    <a class="text-white login_btn align-self-center mx-md-3" data-toggle="modal" data-target="#modal">
                        <i class="fa fa-user"></i>
                    </a>
                }
                <!-- sigin and sign up -->
            </div>
        </div>
    </nav>

    <!--Bottom navigator-->
    <nav class="navbar navbar-expand-lg navbar-light justify-content-center">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav mx-auto text-center">

                <li class="nav-item">
                    <a class="nav-link  active" href="@Url.Action("Index","Home")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link scroll" href="@Url.Action("Index","Furniture")">Furniture</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link scroll" href="#team">Team</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link scroll" href="#contact">Contact</a>
                </li>
            </ul>
        </div>
    </nav>
</div>
